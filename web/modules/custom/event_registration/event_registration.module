<?php

/**
 * @file
 * Hook implementations for the Event Registration module.
 */

use Drupal\Core\Render\Markup;

/**
 * Implements hook_mail().
 *
 * Defines email templates for event registration notifications.
 */
function event_registration_mail($key, &$message, $params) {
  switch ($key) {
    case 'registration_confirmation':
      // Email to participant confirming their registration.
      $message['subject'] = t('Registration Confirmed: @event', [
        '@event' => $params['event_name'],
      ]);
      $message['body'][] = t('Dear @name,', [
        '@name' => $params['full_name'],
      ]);
      $message['body'][] = '';
      $message['body'][] = t('Thank you for registering for our event. Here are your registration details:');
      $message['body'][] = '';
      $message['body'][] = t('Event: @event', ['@event' => $params['event_name']]);
      $message['body'][] = t('Category: @category', ['@category' => $params['category']]);
      $message['body'][] = t('Date: @date', ['@date' => $params['event_date']]);
      $message['body'][] = '';
      $message['body'][] = t('We look forward to seeing you at the event!');
      $message['body'][] = '';
      $message['body'][] = t('Best regards,');
      $message['body'][] = t('Event Registration Team');
      break;

    case 'admin_notification':
      // Email to admin about new registration.
      $message['subject'] = t('New Registration: @event', [
        '@event' => $params['event_name'],
      ]);
      $message['body'][] = t('A new participant has registered for an event.');
      $message['body'][] = '';
      $message['body'][] = t('Registration Details:');
      $message['body'][] = t('Name: @name', ['@name' => $params['full_name']]);
      $message['body'][] = t('Email: @email', ['@email' => $params['email']]);
      $message['body'][] = t('College: @college', ['@college' => $params['college']]);
      $message['body'][] = t('Department: @department', ['@department' => $params['department']]);
      $message['body'][] = '';
      $message['body'][] = t('Event Details:');
      $message['body'][] = t('Event: @event', ['@event' => $params['event_name']]);
      $message['body'][] = t('Category: @category', ['@category' => $params['category']]);
      $message['body'][] = t('Date: @date', ['@date' => $params['event_date']]);
      break;
  }
}
